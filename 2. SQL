sql = """
CREATE TABLE "Customer_Table" ( 
"CustomerID" INTEGER NOT NULL,
"FCustomerName" TEXT,
"LCustomerName" TEXT,
"CustomerUserName" TEXT,
"CustomerPwd" TEXT,
"CustomerEmailAddress" TEXT, 
"CustomerPhoneNo" TEXT,
"CustomerAge" INTEGER,
PRIMARY KEY("CustomerID" AUTOINCREMENT)
);
CREATE TABLE "Session_Table" ( 
"SessionID" INTEGER NOT NULL,
"Calories_per_hour" INTEGER,
"Session_Name" TEXT,
PRIMARY KEY("SessionID" AUTOINCREMENT)
);
CREATE TABLE "Card_Table" ( 
"CardID" INTEGER NOT NULL,
"Name_on_card" TEXT,
"Card_Number" TEXT,
"Expiry_Date" DATE,
"CVV_Number" TEXT,
"CustomerID" INTEGER,
"Billing_Address" TEXT,
"Postcode" TEXT,
PRIMARY KEY("CardID" AUTOINCREMENT)
CONSTRAINT "CustomerID_fk"  FOREIGN KEY("CustomerID") REFERENCES "Customer_Table"("CustomerID")
);
CREATE TABLE "Workout_Table" (
"WorkoutID"  INTEGER NOT NULL,
"WorkoutDate" DATE,
"WorkoutDuration"  INTEGER,
"WorkoutCalories"  INTEGER,
"CustomerID" INTEGER,
"SessionID" INTEGER,
PRIMARY KEY("WorkoutID" AUTOINCREMENT),
CONSTRAINT "CustomerID_fk" FOREIGN KEY("CustomerID") REFERENCES "Customer_Table"("CustomerID")
CONSTRAINT "SessionID_fk" FOREIGN KEY("SessionID") REFERENCES "Session_Table"("SessionID")
);
insert into Customer_Table (FCustomerName, LCustomerName,CustomerUserName,CustomerPwd, CustomerEmailAddress,CustomerPhoneNo, CustomerAge) values ('James', 'Luu','Dinner', 'Megumin70', 'james43@outlook.com', '07546456121', '33');
