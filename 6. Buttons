def learn_more_eating():
	return webbrowser.open("https://www.nhs.uk/live-well/eat-well/how-to-eat-a-balanced-diet/eight-tips-for-healthy-eating/")

def eating_plan_Next():
	if EPlan1.visible == True:
		EPlan2.show()
		EPlan1.hide()
		eating_plan_back_btn.enable()
		eating_plan_next_btn.disable()

def eating_plan_Back():
	if EPlan2.visible == True:
		EPlan1.show()
		EPlan2.hide()
		eating_plan_back_btn.disable()
		eating_plan_next_btn.enable()

def learn_more_eating_plan():
	if EPlan1.visible == True:
		return webbrowser.open("https://www.mnpork.com/4-week-meal-plan-workout-challenge/")
	elif EPlan2.visible == True:
		return webbrowser.open("https://therealfooddietitians.com/wp-content/uploads/2020/12/4_WEEK_MEAL_PLAN.pdf")

def workout_plan_Next():
	if WPlan1.visible == True:
		WPlan2.show()
		WPlan1.hide()
		workout_plan_back_btn.enable()
	elif WPlan2.visible == True:
		WPlan3.show()
		WPlan2.hide()
	elif WPlan3.visible == True:
		WPlan4.show()
		WPlan3.hide()
		workout_plan_next_btn.disable()

def workout_plan_Back():
	if WPlan2.visible == True:
		WPlan1.show()
		WPlan2.hide()
		workout_plan_back_btn.disable()
	elif WPlan3.visible == True:
		WPlan2.show()
		WPlan3.hide()
	elif WPlan4.visible == True:
		WPlan3.show()
		WPlan4.hide()
		workout_plan_next_btn.enable()

def exit_window(): #this stops the app
    app.destroy() #this closes the app

def Log_out_btn():
	main_menu.hide()
	app.show()
