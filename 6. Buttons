###############
# Buttons     #
###############

def login_window(): #this opens the login window when the user clicks the log in button
	app.hide() #closes main menu
	login.show(wait=True) #opens login window

def sign_up_window(): #this opens the sign up window when the user clicks the log in button
	app.hide()#closes main menu
	sign_up.show(wait=True) #opens login window

def back(): #this hides all the windows 
	login.hide()#closes login window
	sign_up.hide()#closes sign_up window
	app.show()#open main menu

def main_menu_window():
	login.hide()
	main_menu.show()

def update_pwd_window():
	login.hide()
	update_pwd.show()

def update_pwd_back():
	update_pwd.hide()
	login.hide()  

def newsfeed_window():
	main_menu.hide()
	Newsfeed.show()

def customise_plan_window():
	main_menu.hide()
	Custom_plans.show()

def additional_services_window():
	info("Error", "Coming Soon")

def join_premium_window():
	main_menu.hide()
	premium_window.show()

def premium_back_btn():
	premium_window.hide()
	main_menu.show()

def newsfeed_back_btn():
	Newsfeed.hide()
	main_menu.show()

def custom_plans_back_btn():
	Custom_plans.hide()
	main_menu.show()

def fitness_advice_window():
	Fitness_advice.show()

def eating_advice_window():
	Eating_advice.show()

def workout_plans_window():
	Workout_Plan.show()

def eating_plans_window():
	Eating_Plan.show()

def fitness_advice_Next():
	#this allow them to scroll to the next image
	if Fadvice1.visible == True:
		Fadvice2.show()
		Fadvice1.hide()
		fitness_advice_back_btn.enable()
	elif Fadvice2.visible == True:
		Fadvice3.show()
		Fadvice2.hide()
	elif Fadvice3.visible == True:
		Fadvice4.show()
		Fadvice3.hide()
	elif Fadvice4.visible == True:
		Fadvice5.show()
		Fadvice4.hide()
	elif Fadvice5.visible == True:
		Fadvice6.show()
		Fadvice5.hide()
	elif Fadvice6.visible == True:
		Fadvice7.show()
		Fadvice6.hide()
	elif Fadvice7.visible == True:
		Fadvice8.show()
		Fadvice7.hide()
		fitness_advice_next_btn.disable()

def fitness_advice_Back():
	#this go back from the image they are on
	if Fadvice2.visible == True:
		Fadvice1.show()
		Fadvice2.hide()
		fitness_advice_back_btn.disable()
	elif Fadvice3.visible == True:
		Fadvice2.show()
		Fadvice3.hide()
	elif Fadvice4.visible == True:
		Fadvice3.show()
		Fadvice4.hide()
	elif Fadvice5.visible == True:
		Fadvice4.show()
		Fadvice5.hide()
	elif Fadvice6.visible == True:
		Fadvice5.show()
		Fadvice6.hide()
	elif Fadvice7.visible == True:
		Fadvice6.show()
		Fadvice7.hide()
	elif Fadvice8.visible == True:
		Fadvice7.show()
		Fadvice8.hide()
		fitness_advice_next_btn.enable()

def learn_more_fitness():
	return webbrowser.open('https://www.muscleandfitness.com/workouts/workout-tips/25-expert-tips-improve-workout/' )

